float area (float a, float b)
{
	float x;
	  x= a*b;
    return x;
}

string invertir (string var1)
{   
	int lng;
	char aux;
	string var2=var1;
	lng = var1.length();
	for (int i=0; i< lng/2; i++)
     {  
		aux= var1.at(i);
		var1[i]= var1[lng-1-i];
		var1[lng-1-i]= aux;
	 }
	 return var1;
}
